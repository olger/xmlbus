    <xmlbusd>
        <outboundtransports>
            <!-- outbound transports can be available a number of times -->
            <outboundtransport>
                <implementation>libtcpworker-transport.dylib</implementation>
                <configuration><empty/></configuration>
            </outboundtransport>
        </outboundtransports>
        <services>
            <service>
                <implementation>libtestservice.dylib</implementation>
                <inboundtransport> <!-- there is only one per service -->
                    <implementation>libtcpworker-transport.dylib</implementation>
                    <configuration><port>6789</port></configuration>
                </inboundtransport>
				<configuration><testentry>test</testentry></configuration>
				<inboundpipeline>
					<filter>
						<implementation>libtestpipeline.dylib</implementation>
						<configuration><empty/></configuration>
					</filter>
				</inboundpipeline>
				<outboundpipeline/>
				<publishregistry>
					<registry>
						<implementation>libmdnspublishregistry.dylib</implementation>
						<configuration>
							<name>testservice</name>
						</configuration>
					</registry>
				</publishregistry>
            </service>
        </services>
    </xmlbusd>